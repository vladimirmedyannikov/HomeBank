<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.medyannikov.homebank" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".IntentDialog.BillIntent" >
        </activity>
        <activity
            android:name=".IntentDialog.OperationIntent"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity android:name=".Activity.ActivityBillInfo" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".Activity.ApartamentsActivity"
            android:label="@string/title_activity_apartaments" >
        </activity>
        <activity android:name=".IntentDialog.ApartamentIntent">

        </activity>
    </application>

</manifest>
