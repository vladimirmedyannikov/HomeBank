<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/coordinator_bill_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ActivityBillInfo">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_main"
            app:layout_scrollFlags="scroll|enterAlways">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|enterAlways"
                android:fitsSystemWindows="true">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="?android:colorBackground"
                    android:gravity="right"
                    android:id="@+id/balance"
                    android:textSize="18sp"
                    android:layout_alignParentLeft="true"
                    android:text="@string/balanceBill"
                    app:layout_scrollFlags="scroll|enterAlways"
                    android:fitsSystemWindows="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/valueBill"
                    android:background="?android:colorBackground"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/balance"
                    android:gravity="center"
                    android:textSize="18sp"
                    app:layout_scrollFlags="scroll|enterAlways"
                    android:fitsSystemWindows="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|enterAlways"
                android:fitsSystemWindows="true">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="?android:colorBackground"
                    android:gravity="right"
                    android:id="@+id/abouttext"
                    android:textSize="18sp"
                    android:layout_alignParentLeft="true"
                    android:text="@string/aboutBill"
                    app:layout_scrollFlags="scroll|enterAlways"
                    android:fitsSystemWindows="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/aboutBill"
                    android:background="?android:colorBackground"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/abouttext"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:singleLine="true"
                    app:layout_scrollFlags="scroll|enterAlways"
                    android:fitsSystemWindows="true" />
            </RelativeLayout>
            <android.support.design.widget.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tabLayoutBill"
                xmlns:tabs="http://schemas.android.com/apk/res-auto"
                tabs:tabIndicatorColor="@android:color/white"
                tabs:tabIndicatorHeight="6dp"
                tabs:tabTextColor="@color/color_tabs"
                tabs:tabSelectedTextColor="@android:color/white"
                tabs:tabBackground="@color/accent_material_light"
                android:background="@color/color_main">
            </android.support.design.widget.TabLayout>
        </android.support.design.widget.AppBarLayout>
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewPagerBill"
            xmlns:pager="http://schemas.android.com/apk/res-auto"
            pager:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:background="@android:color/white"
            android:fitsSystemWindows="true">
        </android.support.v4.view.ViewPager>
    </android.support.design.widget.CoordinatorLayout>
