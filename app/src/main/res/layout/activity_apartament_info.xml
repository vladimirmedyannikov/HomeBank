
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_bill_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ActivityApartamentInfo">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_main"
        app:layout_scrollFlags="scroll|enterAlways">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways"
            android:fitsSystemWindows="true">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="?android:colorBackground"
                android:gravity="right"
                android:id="@+id/aboutBill"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"
                android:text="@string/aboutBill"
                app:layout_scrollFlags="scroll|enterAlways"
                android:fitsSystemWindows="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/aboutApartament"
                android:background="?android:colorBackground"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/aboutBill"
                android:gravity="center"
                android:textSize="18sp"
                app:layout_scrollFlags="scroll|enterAlways"
                android:fitsSystemWindows="true" />
        </RelativeLayout>
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBarApartament"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:titleTextColor="@color/color_main"
            app:theme="@style/MyActionBar"
            xmlns:app="http://schemas.android.com/apk/res-auto"/>
        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tabLayoutApartament"
            xmlns:tabs="http://schemas.android.com/apk/res-auto"
            tabs:tabIndicatorColor="@android:color/white"
            tabs:tabIndicatorHeight="6dp"
            tabs:tabTextColor="@color/color_tabs"
            tabs:tabSelectedTextColor="@android:color/white"
            tabs:tabBackground="@color/accent_material_light"
            android:background="@color/color_main">
        </android.support.design.widget.TabLayout>

    </android.support.design.widget.AppBarLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewPagerApartament"
        android:background="@android:color/white">
    </android.support.v4.view.ViewPager>
</android.support.design.widget.CoordinatorLayout>
